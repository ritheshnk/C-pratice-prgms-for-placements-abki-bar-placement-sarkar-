#include<stdio.h>
#include<stdlib.h>
#include<string.h>

void removeChar(char * a,char remove)
{
  int len=strlen(a);
  for(int i=0;i<len;i++)
    {
      if(a[i]==remove)
      {
        for(int j=i;j<len;j++)
          {
            a[j]=a[j+1]; //deletion condition
          }
        len--;
      
      }
    }
}

int main()
{
  char a[100],removech;
  printf("enter a string : \n");
  gets(a);

  printf("enter a char to remove: ");
  scanf("%c",&removech);
  removeChar(a,removech);
  printf("%s",a);
  
  
}

