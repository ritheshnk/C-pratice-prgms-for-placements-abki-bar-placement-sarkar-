#include <stdio.h>
int n;
int main() 
{
  
  scanf("%d",&n);
  for(int i=1;i<=n;i++)
    {
      //first we need to print space n then star
      for(int j=1;j<=(n-i);j++)
        
          printf(" ");
          for(int k=0;k<=(2*(i-1));k++)
            
              printf("*");
            
          printf("\n");
        
    }
}
